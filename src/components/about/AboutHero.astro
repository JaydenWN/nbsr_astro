---
import { getImage } from "astro:assets";
import shopHeroImg from "../../assets/images/about_hero.webp";
const optimizedBackgroundImage = await getImage({ src: shopHeroImg });
---

<header id="about_us_hero">
    <h2 id="about_us_title">About Northern Beaches Smash Repairs</h2>
</header>

<style>
    #about_us_hero {
        padding: var(--xl) var(--lg);
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: var(--off-white);
    }
    #about_us_title {
        display: block;
        text-align: center;
        font-size: 3em;
        background-color: var(--red);
        padding: 0em 0.2em;
    }
    @media (width >= 768px) {
        #about_us_hero {
            padding: var(--tb);
        }
    }
    @media (width >= 1024px) {
        #about_us_hero {
            padding: var(--tb) var(--lt);
        }
    }
    @media (width >= 1440px) {
        #about_us_hero {
            padding: var(--lt) var(--dt);
        }
    }
    @media (width >= 2560px) {
        #about_us_hero {
            padding: var(-lt) var(--fk);
        }
    }
</style>
