---
import Image from "astro/components/Image.astro"
import shopImg1 from '../../assets/images/shop1.jpg'
import shopImg2 from '../../assets/images/shop2.jpg'
import shopImg3 from '../../assets/images/shop3.jpg'
---

<section id="the_shop">
    <h3 id="the_shop_title">The Shop</h3>

    <div id="shop_images">
        <Image 
            src={shopImg1} 
            alt='Outside northern beaches smash repairs'
            class='shop_image'/>
        <Image 
            src={shopImg2} 
            alt='Inside northern beaches smash repairs'
            class='shop_image'/>
        <Image 
            src={shopImg3} 
            alt='Wide shot of northern beaches smash repairs'
            class='shop_image'
            />
    </div>
</section>

<style>
    #the_shop{
        margin: var(--tb) 0px var(--lg) 0px;
    }
    #the_shop_title{
        font-size: 3em;
        font-family: var(--h);
        text-align: center;
        background-color: var(--red);
        max-width: fit-content;
        margin-left: auto;
        margin-right: auto;
        padding: 0.25rem var(--sm);
        margin-bottom: var(--tb);
    }
    #shop_images{
        display: flex;
        flex-direction: column;
        gap: var(--tb);
    }
    .shop_image{
        max-width: 80%;
        height: auto;
    }
    .shop_image:nth-last-of-type(odd){
        align-self: flex-end;
        border-left: 1rem solid var(--dark-red);
    }
    .shop_image:nth-last-of-type(even){
        border-right: 1rem solid var(--dark-red);
    }
    .shop_image:last-of-type{
        min-width: 100%;
        border-bottom: 1rem solid var(--dark-red);
    }
</style>