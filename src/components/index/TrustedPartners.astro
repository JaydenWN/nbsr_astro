---
import Image from "astro/components/Image.astro"
import nrmaIcon from '../../assets/icons/nrma.svg'
import alianceIcon from '../../assets/icons/allianz.svg'
---

<section id="trusted_partners">
    <h2 id="trusted_partners-title">Trusted Partners</h2>
    <div id="trusted_partner--container">
        <Image src={nrmaIcon} alt="nrma logo"/>
        <Image src={alianceIcon} alt="alliance logo"/>
    </div>
</section>

<style>
    #trusted_partners{
        padding: var(--lg);
        display: flex;
        flex-direction: column;
        gap: var(--lg);
    }

    #trusted_partners-title{
        font-size: 2em;
        text-align: center;
    }

    #trusted_partner--container{
        display: flex;
        justify-content: space-evenly;
    }

    #trusted_partner--container img{
        max-height: 100px;
        max-width: 100px;
    }
</style>