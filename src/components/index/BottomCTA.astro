<style>
    #bottom_cta{
        padding: var(--lg);
        display: flex;
        flex-direction: column;
        gap: var(--lg);
    }
    #bottom_cta_content_title{
        font-size: 3em;
    }
    #bottom_cta_content{
        display: flex;
        flex-direction: column;
        gap: var(--md);
    }
    #bottom_cta_buttons{
        align-self: center;
        display: flex;
        gap: var(--sm);
    }
    #bottom_cta_buttons-quote{
        border: 1px solid var(--red);
        padding: var(--md) var(--lg);
        background-color: transparent;
        color: white;
        font-family: var(--p);
        text-transform: uppercase;
    }
    #bottom_cta_buttons-phone{
        border: 1px solid var(--red);
        background-color: var(--red);
        padding: var(--sm);
    }
