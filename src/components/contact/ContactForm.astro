<fieldset id="contact">
    <legend id="contact_title">Contact Us</legend>
    <form id="contact_form">
        <div class="customer_input">
            <label for="name_input" >Name</label>
            <input type="text" name="name" id="name_input" required/>

            <label for="email_input">Email</label>
            <input type="email" name="email" id="email_input" required/>
        </div>
        <div class="customer_input">
            <label for="message">Your message</label>
            <textarea maxlength="600" minlength="20" id="message" required/>
         </div>
        <button id="submit_button">Send</button>
    </form>
</fieldset>


<style>
    #contact{
        margin: var(--lg);
        padding: var(--md);
        border: 1px solid var(--dark-red);
    }
    #contact_form{
        display: flex;
        flex-direction: column;
        gap: var(--lg);
    }
    #contact_title{
        text-align: center;
        padding: 0px var(--sm);
        font-family: var(--h);
        text-transform: uppercase;
        font-size: 2em;
    }
    #contact_form input, textarea{
        border: 1px solid var(--red);
        background-color: transparent;
        padding: var(--sm);
        color: white;
        font-family: var(--p);
    }
    .customer_input{
        display: flex;
        flex-direction: column;
        gap: var(--sm);
    }

    .customer_input label:nth-last-of-type(odd){
        margin-top: var(--sm);
    }
    
    #message{
        min-height: 250px;
    }

    #submit_button{
        border: 0px;
        background-color: var(--red);
        font-family: var(--p);
        color: white;
        max-width: fit-content;
        padding: var(--sm) var(--lg);
        align-self: flex-end;
    }
</style>