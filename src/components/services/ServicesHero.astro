---
import Image from "astro/components/Image.astro";
import heroImg from "../../assets/images/service_hero.png";
---

<header id="our_services">
    <div class="service_header">
        <Image
            src={heroImg}
            alt={"northern beaches smash repair services"}
            class="image"
        />
        <h1 id="our_services_title">Our Services</h1>
    </div>
    <p id="our_services_text">
        At Northern Beaches Smash Repairs, we offer a comprehensive range of
        services to get your vehicle back in top shape. Our skilled technicians
        handle everything from minor touch-ups to major structural repairs,
        ensuring your car looks and drives like new.
    </p>
</header>

<style>
    .image {
        object-fit: cover;
        width: 100%;
        height: 100%;
    }
    .service_header {
        position: relative;
        background-color: green;
        height: 224px;
    }
    #our_services {
        display: flex;
        flex-direction: column;
    }
    #our_services_text {
        padding: var(--lg);
    }
    #our_services_title {
        font-size: 3em;
        position: absolute;
        top: var(--lg);
        left: var(--lg);
        color: white;
        text-shadow: var(--black) 2px 2px 4px;
    }
    @media (width >= 768px) {
        #our_services_title {
            top: var(--tb);
            left: var(--tb);
        }
        #our_services_text {
            padding: var(--tb);
        }
    }
    @media (width >= 1024px) {
        #our_services_title {
            top: var(--lt);
            left: var(--lt);
        }
        #our_services_text {
            padding: var(--lt);
            max-width: 45%;
        }
        .service_header {
            height: 370px;
        }
    }
    @media (width >= 1440px) {
        #our_services_title {
            top: var(--dt);
            left: var(--dt);
        }
        #our_services_text {
            padding: var(--dt);
        }
    }

    @media (width >= 2560px) {
        #our_services {
            padding: var(--dt) var(--fk);
        }
    }
</style>
